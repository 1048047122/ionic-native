{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": false,
        "declaration": true
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/index.ts",
        "src/plugin-config.ts",
        "src/plugins/actionsheet.ts",
        "src/plugins/camera.ts",
        "src/plugins/device.ts",
        "src/plugins/plugin.ts",
        "src/plugins/statusbar.ts",
        "src/plugins/toast.ts",
        "src/util.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
